@model IEnumerable<LuChiTam.Models.GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GioHang</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dThanhtien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ten)
            </td>
            <td>
                <img src=" @Html.DisplayFor(modelItem => item.hinh)" width="180px" />
            </td>

            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @id = item.id }))
            {
                <td><input type="number" min="1" name="txtSoLg" value="@item.iSoluong"</td>
                <td>@string.Format("0:0,0", item.gia) Zimbabwe</td>

                <td>@Html.DisplayFor(modelItem => item.dThanhtien)</td>
                <td>
                    <a href="@Url.Action("Details", "Rubik", new {id = item.id })">Chi tiết</a> |
                    @Html.ActionLink("Xoá", "XoaGiohang", new { @id = item.id })
                </td>
                <td>
                    <input type="submit" value="Cập Nhật" class="btn btn-success"
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iSoluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dThanhtien)
            </td>
        </tr>
    }

    <tr style="font-weight : bold; text-align: left; color: red">
        <td colspan="2"> Số Loại Sách : @ViewBag.Tongsoluongsanpham</td>
        <td colspan="2"> Số lượng sách : @ViewBag.Tongsoluong</td>
        <td colspan="4"> Tổng tiền : @string.Format("{0:0,0}", ViewBag.Tongtien) Zimbabwe</td>
    </tr>

    <tr style="font-weight : bold; text-align: right; color: blue">
        <td colspan="5"> @Html.ActionLink("Xoá giỏ hàng", "XoaTatCaGioHang")</td>
    </tr>

    <tr style="font-weight : bold; text-align: right; color: yellow">
        <td colspan="5"> @Html.ActionLink("Đặt hàng", "Index", "Home")</td>
    </tr>

</table>
